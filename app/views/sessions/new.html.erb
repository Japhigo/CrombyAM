  <% form_tag do %>
    <table>
	  <tr>
		<td>Username:</td>
		<td>
          <%= text_field_tag :user_name, params[:user_name] %>
        </td>
      </tr>
	  <tr>
		<td>Password:</td>
		<td>
          <%= password_field_tag :password, params[:password] %>
        </td>
      </tr>
    </table>
    <p>
      <%= submit_tag "Login" %>
    </p>

  <% end %>

