<div id="ref-edit">

  <h2>Editing Reference Data Table</h2>

<% form_for(@ref_data_table) do |f| %>

  <% if @ref_data_table.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ref_data_table.errors.count, "error") %> prohibited this Reference Data Table from being saved:</h2>

      <ul>
      <% @ref_data_table.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <td class="title-cell"><b>Table name</b></td>
      <td><%= @ref_data_table.table_name %></td>
    </tr>
  <tr>
      <td class="title-cell"><b><%= f.label :description %></b></td>
    <td><%= f.text_field :description %></td>
  </tr>
  <tr>
      <td class="title-cell"><b><%= f.label :code_mandatory %></b></td>
    <td><%= f.check_box :code_mandatory %></td>
    </tr>
  <tr>
      <td class="title-cell"><b><%= f.label :code_min_length %></b></td>
    <td><%= f.text_field :code_min_length %></td>
    </tr>
  <tr>
      <td class="title-cell"><b><%= f.label :code_max_length %></b></td>
    <td><%= f.text_field :code_max_length %></td>
    </tr>
  <tr>
      <td class="title-cell"><b><%= f.label :code_format %></b></td>
    <td><%= f.text_field :code_format %></td>
  </tr>
  <tr>
      <td class="title-cell"><b><%= f.label :description_mandatory %></b></td>
    <td><%= f.check_box :description_mandatory %></td>
    </tr>
  </table>
  <%= f.hidden_field :updated_by %>
  <p>
    <%= f.submit 'Update' %>
  </p>

<% end %>
</div>
<br/>
<div id="lower-menu">
  <p><%= link_to 'Show', @ref_data_table %> &middot;
<%= link_to 'Back to list', ref_data_tables_path %></p>
</div>